<p style="color: green"><%= notice %></p>

<h1>Shopping carts</h1>

<div id="shopping_carts">
  <% @shopping_carts.each do |shopping_cart| %>
    <strong> Owner - </strong>
    <%= shopping_cart.user.name %>
    <strong> current offers - </strong>
    <%= shopping_cart.bricks.count %>
    <p>
      <%= link_to "Show this shopping cart", shopping_cart %>
    </p>
  <% end %>
</div>
