<div id="<%= dom_id realty %>">
  <img src="<%= realty.img %>" alt="realty thumbnail" width="250" height="250">
  <p>
    <strong>Address:</strong>
    <%= realty.address %>
  </p>
  <p>
    <string>Total Bricks:</string>
    <%= realty.bricks.count %> |

    <string>on sale:</string>
    <%= realty.bricks.where(on_sale: true).count %>
    starting from <%= realty.bricks.where(on_sale: true).order(:price).first.price %>
  </p>
</div>
